@using WebComunidad.Models
@model LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>.:NetBol-WiphalaSistemas:.</title>
    @Styles.Render("~/Content/themecss")
    @Styles.Render("~/Content/datatable")
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        <h1>Login - NetBol</h1>
                        <div class="row">
                            <div class="col-xs-12">
                                <section id="loginForm">

                                    @Html.AntiForgeryToken()
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div>Usuario</div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div>Contraseña</div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                @Html.LabelFor(m => m.RememberMe)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <input style="margin-left: 0px !important" type="submit" value="Iniciar sesión" class="btn btn-success btn-block" />
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1>Net Bol Comunidad de Futbol</h1>
                                <p>©2017 <a href="http://www.wiphalasistemas.com.ar" target="_blank">www.wiphalasistemas.com.ar</a></p>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}