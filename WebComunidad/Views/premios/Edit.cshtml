@model Entidades.EF.premio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-title">
            <div class="title_left">
                <h3>Modificando Premio</h3>
            </div>

           <div class="title_right">
                    <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right top_search">
                        <div class="text-danger">Si selecciona una nueva imagen se modifica, de lo contrario queda la imagen actual.</div>
                    </div>
                </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">Modificando Premio - @Model.nombre</div>
            <div class="x_content">
                <div class="row">
                   @using (Html.BeginForm("Edit", "Premios", FormMethod.Post, new { enctype = "multipart/form-data" }))
                   {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.usuario_alta)
                        @Html.HiddenFor(model => model.fecha_alta)
                        <div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-6">
                                    Nombre
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="fa fa-shopping-bag" aria-hidden="true"></i></span>
                                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    Puntos
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="fa fa-star" aria-hidden="true"></i></span>
                                        @Html.EditorFor(model => model.puntos, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.puntos, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    Descripcion Larga
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="fa fa-edit"></i></span>
                                        @Html.EditorFor(model => model.descripcion_larga, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.descripcion_larga, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4" title="Es el complejo responsable de la carga, no es obligatorio">
                                    Complejo Responsable
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="fa fa-map-marker"></i></span>
                                        @Html.DropDownListFor(model => model.complejo_responsable_id, ViewBag.ListComplejos as SelectList, "No obligatorio", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.complejo_responsable_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    Desactivado
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="fa fa-check"></i></span>
                                        @Html.EditorFor(model => model.desactivado)
                                        @Html.ValidationMessageFor(model => model.desactivado, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col-md-4">
                                    Imagen (jpg,png,gif,bmp)
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="fa fa-image"></i></span>
                                        <input type="file" name="ImagenFile" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="submit" value="Modificar" class="btn btn-success btn-block" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <img src="@Model.UrlImagen" class="img-responsive center-block" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Script {
    @Scripts.Render("~/bundles/jqueryval")
}
