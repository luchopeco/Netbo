<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">Modificar Complejo</div>
            <div class="x_content">
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    Descripcion
                                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.fecha_alta, new { htmlAttributes = new { @class = "form-control hidden" } })
                        @Html.EditorFor(model => model.fecha_baja, new { htmlAttributes = new { @class = "form-control hidden" } })
                        @Html.EditorFor(model => model.usuario_alta, new { htmlAttributes = new { @class = "form-control hidden" } })
                        @Html.EditorFor(model => model.usuario_baja, new { htmlAttributes = new { @class = "form-control hidden" } })
                        <div class="row">
                            <div class="form-group">
                                <br />
                                <div class="col-md-12">
                                    <input type="submit" value="Modificar" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Script {
