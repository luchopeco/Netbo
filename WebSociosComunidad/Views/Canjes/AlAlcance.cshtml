@model IEnumerable<WebSociosComunidad.Models.Canjes.AlAlcance>

@{
    ViewBag.Title = "Premios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <h1 class="page-header">
        Premios a tu Alcance
    </h1>
}

@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-10 col-lg-offset-1">
            <div class="card">             
                <div class="card-content">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Premios</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.Premio por @p.Puntos puntos</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-10 col-lg-offset-1">
            <div class="card">
                <div class="card-action">
                   No Existen Premios al alcance
                </div>
                <div class="card-content">
                   La cantidad de puntos acumulada no alcanza para canjear por algun premio. Segui sumando puntos!!
                </div>
            </div>
        </div>
    </div>
}

