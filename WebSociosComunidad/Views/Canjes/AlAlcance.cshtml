@model IEnumerable<WebSociosComunidad.Models.Canjes.AlAlcance>

@{
    ViewBag.Title = "Premios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <h1 class="page-header">
        Premios a tu Alcance
    </h1>
}

@if (Model != null && Model.Count() > 0 && Model.Any(cc => cc.Alcance))
{
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="card">
                <div class="card-content">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Premios a tu alcance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    if (p.Alcance == true)
                                    {
                                        <tr>
                                            <td>@p.Premio por @p.Puntos puntos</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="card">
                <div class="card-action">
                    No Existen Premios al alcance
                </div>
                <div class="card-content">
                    La cantidad de puntos acumulada no alcanza para canjear por algun premio. Segui sumando puntos!!
                </div>
            </div>
        </div>
    </div>
}
<h1>
    Todos los Premios
</h1>
<br />
<div class="row">
    @foreach (var p in Model)
    {
        if (p.Alcance == false)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-action">
                        @p.Premio
                    </div>
                    <div class="card-content">
                        <img class="img-responsive" src="@p.UrlImagen">
                    </div>
                </div>
            </div>
        }
    }
</div>