@model WebSociosComunidad.Models.RegisterViewModel
@{
    ViewBag.Title = "Nuevo Usuario";
    Layout = "";
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title ::Socios::Netbol</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    @Styles.Render("~/Target/css")
    <link rel="shortcut icon" href="~/Img/favicon.ico">
</head>
<body>
    <div class="row" style="padding:10px; margin-top:30px">
        <div class="col-md-12">
            <img src="~/Img/logo.png" class="img-responsive center-block" />
        </div>
    </div>

    <div class="col-xs-8 col-xs-offset-2 text-center" style="background-color:#E0E8F5;">
        <div style="margin-bottom:30px; padding-top:10px">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <section id="loginForm">

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h2>Nuevo Usuario</h2>
                            <hr />
                            <div><small class="text-info">Para poder registrarte tenes que ser socio de NetBol y tener asignada una tarjeta.</small></div>
                            <div>
                                <small class="text-info"> Completa los datos solicitados</small>
                            </div>
                            <div>
                                <small class="text-info"> Ingresa el celular y documento de registro</small>
                            </div>
                            <hr />
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            Usuario
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "required", @placeholder = "Usuario" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        Celular <small class="text-danger">(Sin 0, sin 15. (Ejemplo: 3416860766))</small>
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @required = "required", @placeholder = "Celular de registro", @type = "number" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            Documento
                                            @Html.TextBoxFor(m => m.Documento, new { @class = "form-control", @required = "required", @placeholder = "Documento de registro", @type = "number" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            Mail <small class="text-danger">(Opcional)</small>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "mail" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        Clave
                                        <div class="col-md-12">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        Confirmar Clave
                                        <div class="col-md-12">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input type="submit" class="btn btn-success btn-block" value="Registrarse" />
                                        </div>
                                    </div>
                        }
                    </section>
                    <small class="text-info">Si ya tenes la tarjeta y no te podes registrar acercate al complejo mas cercano</small>
                </div>
            </div>
            <hr />
            <footer>
                <p>Desarrollo  <a href="http://www.wiphalasistemas.com.ar" target="_blank"> Wiphala Sistemas</a></p>
            </footer>
        </div>
    </div>
    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Target/script")

</body>

</html>
